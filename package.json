{
  "build": {
    "appId": "com.n457.Uncolored",
    "copyright": "Copyright © 2016 n457 / Bertrand Vignaud-Lerouge",
    "asar": false,
    "compression": "maximum",
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 448,
          "y": 344,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 192,
          "y": 344,
          "type": "file"
        }
      ]
    },
    "linux": {
      "category": "Office",
      "packageCategory": "editors",
      "target": [
        "deb",
        "zip",
        "AppImage"
      ],
      "synopsis": "(Un)colored — Next generation desktop rich content editor that saves documents with themes. HTML & Markdown compatible. For Windows, OS X & Linux.",
      "desktop": {
        "Type": "Application",
        "Encoding": "UTF-8",
        "Name": "(Un)colored",
        "Comment": "Rich content editor",
        "Exec": "Uncolored",
        "Terminal": false
      }
    }
  },
  "scripts": {
    "gulp": "gulp",
    "dist": "gulp dist"
  },
  "devDependencies": {
    "del": "^2.2.2",
    "electron": "^1.4.5",
    "electron-builder": "^6.7.7",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.0",
    "gulp-replace": "^0.5.4"
  }
}
